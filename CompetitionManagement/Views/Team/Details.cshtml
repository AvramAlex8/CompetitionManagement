@model CompetitionManagement.Models.Team

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AwardNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AwardNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Motto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Motto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            Players
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var player in Model.Players)
                {
                    <li>
                        <a asp-action="Details" asp-controller="Player" asp-route-id="@player.Id">@player.LastName</a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
